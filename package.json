{
	"name": "@devprotocol/util-contracts",
	"version": "3.3.0",
	"description": "Template repository for using TypeScript and Solidity",
	"main": "index.js",
	"scripts": {
		"test": "hardhat test",
		"pretest": "yarn generate",
		"generate": "hardhat compile",
		"pregenerate": "yarn clean",
		"lint": "yarn lint:eslint && yarn lint:solhint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts --fix",
		"lint:solhint": "solhint --fix --max-warnings 0 \"contracts/**/*.sol\"",
		"lint:format": "prettier --write '**/*.{sol,ts,json,md,yml}'",
		"build": "tsc -p tsconfig.build.json",
		"prebuild": "yarn generate",
		"clean": "rimraf scripts/**/*.js build",
		"prepare": "husky install"
	},
	"files": [
		"contracts/access",
		"contracts/config",
		"contracts/storage",
		"contracts/utils"
	],
	"author": "",
	"license": "MPL-2.0",
	"devDependencies": {
		"@devprotocol/protocol": "3.4.1",
		"@nomiclabs/hardhat-ethers": "2.1.1",
		"@nomiclabs/hardhat-waffle": "2.0.3",
		"@typechain/ethers-v5": "9.0.0",
		"@typechain/hardhat": "6.1.2",
		"@types/chai": "4.3.3",
		"@types/dotenv": "8.2.0",
		"@types/mocha": "9.1.1",
		"@types/node": "16.11.56",
		"@typescript-eslint/eslint-plugin": "5.35.1",
		"@typescript-eslint/parser": "5.35.1",
		"chai": "4.3.6",
		"dotenv": "16.0.1",
		"eslint": "8.22.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-config-xo": "0.42.0",
		"eslint-config-xo-typescript": "0.52.0",
		"ethereum-waffle": "3.4.4",
		"ethers": "5.7.0",
		"hardhat": "2.9.9",
		"husky": "7.0.4",
		"mocha": "9.2.2",
		"prettier": "2.7.1",
		"prettier-plugin-solidity": "1.0.0-dev.23",
		"rimraf": "3.0.2",
		"solhint": "3.3.7",
		"ts-node": "10.9.1",
		"type-fest": "2.19.0",
		"typechain": "8.1.0",
		"typescript": "4.7.4"
	},
	"dependencies": {
		"@openzeppelin/contracts": "4.7.3",
		"@devprotocol/protocol-v2": "0.5.0"
	},
	"directories": {
		"test": "test"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dev-protocol/util-contracts.git"
