{
	"name": "@devprotocol/util-contracts",
	"version": "3.3.0",
	"description": "Template repository for using TypeScript and Solidity",
	"main": "index.js",
	"scripts": {
		"test": "hardhat test",
		"pretest": "yarn generate",
		"generate": "hardhat compile",
		"pregenerate": "yarn clean",
		"lint": "yarn lint:eslint && yarn lint:solhint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts --fix",
		"lint:solhint": "solhint --fix --max-warnings 0 \"contracts/**/*.sol\"",
		"lint:format": "prettier --write '**/*.{sol,ts,json,md,yml}'",
		"build": "tsc -p tsconfig.build.json",
		"prebuild": "yarn generate",
		"clean": "rimraf scripts/**/*.js build",
		"prepare": "husky install"
	},
	"files": [
		"contracts/access",
		"contracts/config",
		"contracts/storage",
		"contracts/utils"
	],
	"author": "",
	"license": "MPL-2.0",
	"devDependencies": {
		"@devprotocol/protocol": "3.4.0",
		"@nomiclabs/hardhat-ethers": "2.0.2",
		"@nomiclabs/hardhat-waffle": "2.0.1",
		"@typechain/ethers-v5": "7.1.2",
		"@typechain/hardhat": "2.3.1",
		"@types/chai": "4.2.22",
		"@types/dotenv": "8.2.0",
		"@types/mocha": "9.0.0",
		"@types/node": "16.7.1",
		"@typescript-eslint/eslint-plugin": "5.0.0",
		"@typescript-eslint/parser": "5.0.0",
		"chai": "4.3.4",
		"dotenv": "10.0.0",
		"eslint": "8.0.0",
		"eslint-config-prettier": "8.3.0",
		"eslint-config-xo": "0.39.0",
		"eslint-config-xo-typescript": "0.44.0",
		"ethereum-waffle": "3.4.0",
		"ethers": "5.4.7",
		"hardhat": "2.6.5",
		"husky": "7.0.2",
		"mocha": "9.1.2",
		"prettier": "2.4.1",
		"prettier-plugin-solidity": "1.0.0-beta.18",
		"rimraf": "3.0.2",
		"solhint": "3.3.6",
		"ts-node": "10.3.0",
		"type-fest": "2.5.0",
		"typechain": "5.1.2",
		"typescript": "4.4.3",
		"@devprotocol/protocol-l2": "0.3.0"
	},
	"dependencies": {
		"@openzeppelin/contracts": "4.3.2"
	},
	"directories": {
		"test": "test"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dev-protocol/util-contracts.git"
	},
